<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>DB4D</title>
    <parser>
        <target>doc</target>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>doc</target>
    </transformer>
    <transformations>
        <template name="responsive" />
    </transformations>
    <files>
        <directory>src</directory>
        <ignore>*/tests/*</ignore>
        <ignore>*/Tests/*</ignore>
    </files>
</phpdoc>